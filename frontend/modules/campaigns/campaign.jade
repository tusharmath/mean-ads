.btn-group
    button.btn.btn-default Create
    button.btn.btn-default.disabled Edit
    button.btn.btn-default.disabled Archive
div
    table.table
        thead
            tr
                th
                th #
                th Campaign
                th Style
                th Slots
                th Ads
                th Gauge
                th Algorithm
                th Status

        tbody

            tr(ng-repeat="campaign in cmpCtrl.campaigns")
                td
                    input(type="checkbox")
                td {{$index+101}}
                td
                    .text-capitalize {{campaign.name}}
                td
                    a.text-capitalize(href="#") {{campaign.style}}
                td
                    a(href="#") {{campaign.slotCount}}
                td
                    a(href="#") {{campaign.adCount}}
                td
                    strong.text-capitalize.text-muted {{campaign.gauge}}
                td
                    strong.text-capitalize.text-muted {{campaign.algorithm}}
                td
                    span.text-capitalize.label(ng-class="{'label-success':campaign.status == 'active', 'label-danger': campaign.status === 'stale' }")  {{campaign.status}}
