.panel.panel-info
    .panel-heading
        h4 Create a Subscriptions
    .panel-body
        form.form-horizontal(role='form')
            .form-group
                label.col-md-4.control-label Subscriptions Name
                .col-md-6
                    input.form-control(type='text', placeholder='Enter a name for the Subscription')
            .form-group
                label.col-md-4.control-label Start Date
                .col-md-6
                    input.form-control(type='text', placeholder='Enter a starting date for the Subscription')
            .form-group
                label.col-md-4.control-label Campaign
                .col-md-6
                    select.form-control
                        option(value="") Indiranagar Dentistry
                        option(value="") Kormangala Orthopedics
            .form-group
                label.col-md-4.control-label Initial Credits (Clicks)
                .col-md-6
                    input.form-control(type="text" placeholder="Enter initial credits in Clicks")
            .form-group
                .col-md-6.col-md-offset-4
                    button.btn.btn-primary(type="button") Save
                    | &nbsp;
                    a.btn.btn-default(ng-href="#/subscriptions") Cancel
