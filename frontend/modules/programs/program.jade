.btn-group
    button.btn.btn-default Create
    button.btn.btn-default.disabled Edit
    button.btn.btn-default.disabled Archive
div
    table.table
        thead
            tr
                th #
                th Campaign
                th Style
                th.text-right Slots
                th.text-right Ads
                th Gauge
                th Delivery
                th.text-right Status
        tbody

            tr(ng-repeat="program in prgCtrl.programs")
                td
                    label
                        input(type="checkbox")
                        span &nbsp;
                        span {{$index+101}}

                td
                    .text-capitalize {{program.name}}
                td
                    a.text-capitalize(href="#") {{program.style}}
                td.text-right
                    a(href="#") {{program.slotCount}}
                td.text-right
                    a(href="#") {{program.adCount}}
                td
                    strong.text-capitalize.text-muted {{program.gauge}}
                td
                    strong.text-capitalize.text-muted {{program.algorithm}}
                td.text-right
                    span.text-capitalize.label(ng-class="{'label-success':program.status == 'active', 'label-danger': program.status === 'stale' }")  {{program.status}}
