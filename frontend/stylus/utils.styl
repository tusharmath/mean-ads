$white-space-margin = 4px
.left-space
	margin-left: $white-space-margin
.right-space
	margin-right: $white-space-margin
.both-space
	margin: 0 $white-space-margin
.square
	border-radius 0
.block-middle
	position relative
	top 50%
	transform translateY(-50%)
.block-center
	margin-left auto
	margin-right auto
.opaque
	background-color #fff