// Variables

$white-space-margin = 0.3em
.navigation-bar-content
	.element
		&.active
			border-bottom 3px solid rgba(80,80,80,0.8)

.ace_editor
	height 200px
.preview-well
	height 427px
span.left-space
	margin-left: $white-space-margin
span.right-space
	margin-right: $white-space-margin
span.both-space
	margin: $white-space-margin 0
img.profile-image
	height: 50px
	width: 50px
	border-radius: 50%
	border: 1px #e7e7e7 solid
	top: 50%
	position: absolute
	padding: 2px
	background-color: #fff

