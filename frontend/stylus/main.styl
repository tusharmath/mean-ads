// Variables
@import 'mixins'
@import 'loader'
@import 'utils'
$profile-pic-size = 64 px

body,html
	height 100%
.page-wrapper
	$footer-height = 120px
	min-height 100%
	position relative
	.content
		padding-bottom $footer-height
	.footer
		border-top 1px solid #eeeeee
		width 100%
		position absolute
		bottom 0
		height $footer-height
.ace_editor
	height 200px
.profile-image, .profile-image img
	height $profile-pic-size
	width $profile-pic-size
	background-color #2196f3
	padding 4px
	border-radius 50%
	position relative
	top ($profile-pic-size / 4)
// TODO: Need to rethink what this layer is doing
.flat-layer
	position absolute
	width 100%