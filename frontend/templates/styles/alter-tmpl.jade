.panel.panel-info
	.panel-heading
		.panel-title Alter Style
	.panel-body
		form.form-horizontal(role='form')
			.form-group
				label.col-md-4.control-label Style Name
				.col-md-6
					input.form-control(type='text', placeholder='Enter a name for the Style' ng-model="ctrl.style.name")
			.form-group
				label.col-md-4.control-label Placeholders (csv)
				.col-md-6
					input.form-control(type='text', placeholder='Enter placeholder names for your template' ng-model="ctrl.style.placeholders")
			.form-group
				label.col-md-4.control-label Templating Engine
				.col-md-6
					label.form-control
						a(href="http://olado.github.io/doT/index.html" target="_blank") DotJS

			.form-group
				label.col-md-4.control-label Stylesheet (CSS)
				.col-md-6

					textarea.code.form-control(ng-model="ctrl.style.css" rows="{{ctrl.getRowCount(ctrl.style.css)}}")
			.form-group
				label.col-md-4.control-label Html
				.col-md-6
					textarea.code.form-control(ng-model="ctrl.style.html" rows="{{ctrl.getRowCount(ctrl.style.html)}}")

			.form-group
				.col-md-6.col-md-offset-4
					button.btn.btn-primary(type="button" ng-click="ctrl.save()") Save
					| &nbsp;
					a.btn.btn-default(ng-href="#/programs") Cancel
