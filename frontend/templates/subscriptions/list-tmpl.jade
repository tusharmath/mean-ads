div.panel.panel-default
	.panel-heading
		.btn-group
			a.btn.btn-default.btn-sm(href="#/subscriptions/create") Create
		.clearfix
	.panel-body
		div(ng-hide="ctrl.subscriptions")
			center
				h3.text-info You don't have any subscriptions.
		table.table(ng-show="ctrl.subscriptions")
			thead
				tr.text-capitalize
					th Subscription
					th Campaign
					th.text-left Period
					th.text-right Credits
					th.text-right Conversions
					th.text-right Actions
			tbody
				tr(ng-repeat="sub in ctrl.subscriptions")
					td {{sub.client}}
					td
						a(ng-href="#/campaigns/{{sub.campaign._id}}/update") {{sub.campaign.name}}
					td.text-left(ng-class="ctrl.onExpiredCss(sub)")
						span.right-space {{sub.startDate|date}}
						span.right-space -
						span.right-space {{ctrl.endDate(sub)|date}}
					td.text-right
						strong.text-muted
							span {{sub.usedCredits}}
							span &nbsp;/&nbsp;
							span {{sub.totalCredits}}
					td.text-right
						strong.text-muted {{sub.conversions}}
					td.text-right
						a.btn.btn-link.btn-xs(ng-href="#/subscriptions/{{sub._id}}/update") Update
						a.btn.btn-link.btn-xs(ng-href="#/subscriptions/{{sub._id}}/metrics") Metrics
