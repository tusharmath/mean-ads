div.panel.panel-default
	.panel-heading
		.btn-group
			a.btn.btn-default(href="#/subscriptions/create") Create
		.clearfix
	.panel-body
		div(ng-hide="ctrl.subscriptions")
			center
				h3.text-info You don't have any subscriptions.
		table.table(ng-show="ctrl.subscriptions")
			thead
				tr.text-capitalize
					th Subscription
					th.text-right Start Date
					th Credits
					th Campaign
					th.text-right Actions
			tbody
				tr(ng-repeat="subs in ctrl.subscriptions")
					td {{subs.client}}
					td.text-right {{subs.startDate|date}}
					td
						strong.text-capitalize.text-muted
							span {{subs.usedCredits}}
							span &nbsp;/&nbsp;
							span {{subs.totalCredits}}
					td
						a(ng-href="#/campaigns/{{subs.campaign._id}}/update") {{subs.campaign.name}}
					td.text-right
						a.btn.btn-link.btn-xs(ng-href="#/subscriptions/{{subs._id}}/update") Update
						a.btn.btn-link.btn-xs(ng-href="#/subscriptions/{{subs._id}}/metrics") Metrics
