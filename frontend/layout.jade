doctype html
html
	head
		!= newrelic.getBrowserTimingHeader()
		title
			block title
				| mean-ads
		link(rel='stylesheet' href='//maxcdn.bootstrapcdn.com/bootswatch/3.3.0/paper/bootstrap.min.css')
		link(rel='stylesheet' href='/static/css/main.css')
		block head-scripts
		meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
	body
		.page-wrapper
			.header
				nav.navbar.navbar-inverse.square
					.container-fluid
						.navbar-header
							a.navbar-brand(href="#") #{package.name}
						div(ng-include='\'templates/profiles/list-tmpl\'')
			.content
				.container-fluid
					block content
			.footer
				.container-fluid
					p.text-center
						small.text-info version #{package.version} (Beta)
